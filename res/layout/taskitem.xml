<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/taskremind"
    android:layout_margin="10dp"
    android:alpha="0.8"
    android:padding="5dp" >

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:text="9月5日 14:20"
        android:textColor="@color/black_deep"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/contenttask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="提醒我吃饭fassssssssssssssssssssssssssssssssssssssssssssss"
        android:maxLength="20"
        android:textColor="@color/black_deep"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/istoday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/isevery"
        android:gravity="center_vertical"
        android:text="当天"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/settime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>