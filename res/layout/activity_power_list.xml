<com.layout.utils.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PowerListActivity" >

    <TextView
        android:id="@+id/power_title"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        app:layout_heightPercent="10%"
        android:background="@color/blue"
        android:gravity="center"
        android:text="功能"
        android:textColor="@color/white"
        app:layout_textSizePercent="3%" />

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/video_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="12%"
        app:layout_widthPercent="96%"
        android:background="@drawable/chat_shape" >

        <Button
            android:id="@+id/video_chat_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="25%"
            app:layout_widthPercent="15%"
            android:background="@drawable/videochat"
            android:clickable="false"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/video_chat_img"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="10%"
            app:layout_textSizePercent="14%"
            android:clickable="false"
            android:text="视频"
            android:textColor="@color/white" />
    </com.layout.utils.PercentRelativeLayout>



    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/power_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="33%"
        app:layout_widthPercent="47%"
        android:background="@drawable/taskremind_shape" >

        <Button
            android:id="@+id/power_photo_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="25%"
            app:layout_widthPercent="30%"
            android:clickable="false"
            android:background="@drawable/photo"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/power_photo_img"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="10%"
            app:layout_textSizePercent="14%"
            android:text="相册"
            android:textColor="@color/white" />
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/video_monitor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%"
        app:layout_marginLeftPercent="51%"
        app:layout_marginTopPercent="33%"
        app:layout_widthPercent="47%"
        android:background="@drawable/monitor_shape" >

        <Button
            android:id="@+id/video_monitor_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="25%"
            app:layout_widthPercent="30%"
            android:background="@drawable/monitor_plus"
            android:clickable="false"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/video_monitor_img"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="10%"
            app:layout_textSizePercent="14%"
            android:clickable="false"
            android:text="监控"
            android:textColor="@color/white" />
    </com.layout.utils.PercentRelativeLayout>


    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/power_task"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginTopPercent="54%"
        app:layout_widthPercent="96%"
        android:background="@drawable/photo_shape" >

        <Button
            android:id="@+id/power_task_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="25%"
            app:layout_widthPercent="15%"
            android:background="@drawable/taskremind_plus"
            android:clickable="false"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/power_task_img"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="10%"
            app:layout_textSizePercent="14%"
            android:clickable="false"
            android:text="事项提醒"
            android:textColor="@color/white" />
    </com.layout.utils.PercentRelativeLayout>

    <com.layout.utils.PercentRelativeLayout
        android:id="@+id/power_setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%"
        app:layout_marginLeftPercent="2%"
        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="75%"
        app:layout_widthPercent="100%"
        android:background="@drawable/setting_shape" >

        <Button
            android:id="@+id/power_setting_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="25%"
            app:layout_widthPercent="15%"
            android:background="@drawable/setting"
            android:clickable="false"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/power_setting_img"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="10%"
            app:layout_textSizePercent="14%"
            android:clickable="false"
            android:text="设置"
            android:textColor="@color/white" />
    </com.layout.utils.PercentRelativeLayout>

</com.layout.utils.PercentRelativeLayout>