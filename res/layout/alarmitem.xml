<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/taskremind"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="5dp"
     >

    <TextView
        android:id="@+id/alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="时间"
        android:layout_margin="10dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/alarm_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:maxLength="20"
        android:text="提醒我吃饭fassssssssssssssssssssssssssssssssssssssssssssss"
        android:textColor="@color/black_deep"
        android:layout_marginLeft="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/alarm_istoday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/isevery"
        android:gravity="center_vertical"
        android:text="当天"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/alarm_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="周一"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/alarm_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="周二"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/alarm_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="周三"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/alarm_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="周四"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/alarm_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="周五"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/alarm_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="周六"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/alarm_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="周日"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/alarm_settime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>