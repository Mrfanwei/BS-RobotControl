<com.layout.utils.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/login_title"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_textSizePercent="3%"
        android:gravity="center"
        android:text="@string/login_title"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="25%"
        app:layout_marginLeftPercent="8%"
        app:layout_marginRightPercent="8%"
        app:layout_marginTopPercent="38%"
        app:layout_widthPercent="100%"
        android:background="@drawable/title_shape" >
    </LinearLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="12%"
        app:layout_marginTopPercent="40%"
        app:layout_widthPercent="10%"
        android:background="@null"
        android:drawableRight="@drawable/edit_left"
        android:drawableStart="@drawable/phonenumber"
        android:onClick="togglemode" />

    <EditText
        android:id="@+id/edit_phonenumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="25%"
        app:layout_marginTopPercent="40.3%"
        app:layout_textSizePercent="2%"
        app:layout_widthPercent="40%"
        android:background="@null"
        android:hint="@string/number"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="12%"
        app:layout_marginTopPercent="47%"
        app:layout_widthPercent="10%"
        android:background="@null"
        android:drawableRight="@drawable/edit_left"
        android:drawableStart="@drawable/self" />

    <EditText
        android:id="@+id/edit_vaildcode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="25%"
        app:layout_marginTopPercent="47%"
        app:layout_textSizePercent="2%"
        app:layout_widthPercent="40%"
        android:background="@null"
        android:hint="@string/inputvaildcode"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/getvaild"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="68%"
        app:layout_marginTopPercent="47%"
        app:layout_textSizePercent="2%"
        app:layout_widthPercent="19%"
        android:background="@drawable/getvilery"
        android:text="@string/getvaild"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="20%"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="56%"
        android:background="@drawable/title_shape"
        android:text="@string/login"
        android:textColor="@android:color/white" />

</com.layout.utils.PercentRelativeLayout>